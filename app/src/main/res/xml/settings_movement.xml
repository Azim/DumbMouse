<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:initialExpandedChildrenCount="3">

    <ch.virt.smartphonemouse.ui.settings.custom.SeekFloatPreference
        app:key="movementSensitivity"
        app:title="Mouse Sensitivity"
        app:summary="Control how fast the mouse moves"/>

    <SwitchPreference
        app:key="movementScaleEnable"
        app:title="Scale Speed"
        app:summary="Set whether the app should scale the mouse movement speed"/>

    <Preference
        app:key="movementSamplingCalibrate"
        app:title="Calibrate Sampling Rate"
        app:summary="Automatically evaluate the sampling rate of your sensor"/>

    <PreferenceCategory
        app:title="Sampling Rate">

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementSamplingRealRate"
            app:title="Real Sampling Rate"
            app:summary="Set the real rate the sensor can deliver samples"
            app:showValueAsSummary="true"
            app:valueUnit="Samples per Second"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Low Pass Filter">

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementLowPassOrder"
            app:title="Order"
            app:showValueAsSummary="true"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditFloatPreference
            app:key="movementLowPassCutoff"
            app:title="Cutoff Frequency"
            app:showValueAsSummary="true"
            app:valueUnit="Hz"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Acceleration Freezer">

        <ch.virt.smartphonemouse.ui.settings.custom.EditFloatPreference
            app:key="movementFreezerFreezingThreshold"
            app:title="Freezing Threshold"
            app:showValueAsSummary="true"
            app:valueUnit="m/s²"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditFloatPreference
            app:key="movementFreezerUnfreezingThreshold"
            app:title="Unfreezing Threshold"
            app:showValueAsSummary="true"
            app:valueUnit="m/s²"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementFreezerUnfreezingSamples"
            app:title="Unfreezing Samples"
            app:showValueAsSummary="true"
            app:valueUnit="Samples in a Row"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Noise Cancelling">

        <ch.virt.smartphonemouse.ui.settings.custom.EditFloatPreference
            app:key="movementNoiseThreshold"
            app:title="Threshold"
            app:showValueAsSummary="true"
            app:valueUnit="m/s²"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementNoiseResetSamples"
            app:title="Reset Samples"
            app:showValueAsSummary="true"
            app:valueUnit="Samples in a Row"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Velocity Sign Cache">

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementCacheDurationMinimal"
            app:title="Minimal Cache Duration"
            app:showValueAsSummary="true"
            app:valueUnit="Samples"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementCacheDurationMaximal"
            app:title="Maximal Cache Duration"
            app:showValueAsSummary="true"
            app:valueUnit="Samples"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditFloatPreference
            app:key="movementCacheReleaseThreshold"
            app:title="Threshold to Release"
            app:showValueAsSummary="true"
            app:valueUnit="m/s²"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Scaler">

        <ch.virt.smartphonemouse.ui.settings.custom.EditIntegerPreference
            app:key="movementScalePower"
            app:title="Power"
            app:showValueAsSummary="true"/>

        <ch.virt.smartphonemouse.ui.settings.custom.EditFloatPreference
            app:key="movementScaleSplit"
            app:title="Split Velocity"
            app:showValueAsSummary="true"
            app:valueUnit="m/s"/>

    </PreferenceCategory>

</PreferenceScreen>